<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>0.5.3</Version>
    <Description>Dynamic Parser Grammar Importer Library. Companion library to Axis.Pulsar</Description>
    <PackageReleaseNotes></PackageReleaseNotes>
    <RepositoryUrl>https://github.com/d-dantte/Axis.Pulsar</RepositoryUrl>
    <PackageProjectUrl>https://github.com/d-dantte/Axis.Pulsar</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Company>Axiis</Company>
    <Authors>Dantte</Authors>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Antlr\Antlr.xbnf" />
    <None Remove="xBNF\BNFRule.xml" />
    <None Remove="Xml\RuleDefinition.xsd" />
    <None Remove="Xml\SampleRule.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Antlr\Antlr.xbnf" />
    <EmbeddedResource Include="xBNF\BNFRule.xml" />
    <EmbeddedResource Include="Xml\RuleDefinition.xsd" />
    <EmbeddedResource Include="Xml\SampleRule.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Axis.Pulsar.Parser\Axis.Pulsar.Parser.csproj" />
  </ItemGroup>

</Project>
